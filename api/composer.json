{
    "name": "ivanopol/auction",
    "description": "Demo project from ElisDN lessons",
    "type": "project",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Ivanov Dmitry",
            "email": "ivanopol777@mail.ru"
        }
    ],
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "require": {
        "php": "^7.4",
        "ext-json": "^7.4",
        "php-di/php-di": "^6.4",
        "psr/container": "^1.0",
        "slim/psr7": "^1.6",
        "slim/slim": "^4.3",
        "symfony/console": "^5.4"
    },
    "require-dev": {
        "overtrue/phplint": "^3.4",
        "phpunit/phpunit": "^9.6",
        "roave/security-advisories": "dev-master",
        "squizlabs/php_codesniffer": "^3.7",
        "vimeo/psalm": "^5.7"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\": "tests/"
        }
    },
    "scripts": {
        "lint": "phplint",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "psalm": "psalm",
        "test": "phpunit --colors=always",
        "test-unit-coverage": "phpunit --colors=always --testsuite=unit --coverage-html var/coverage",
        "app": "php bin/app.php --ansi"
    }
}
